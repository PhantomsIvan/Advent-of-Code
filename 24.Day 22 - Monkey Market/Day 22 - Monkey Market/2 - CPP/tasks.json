{
    "tasks": [
        {
            "type": "cppbuild",            // No change: Specifies C++ build task
            "label": "C/C++: g++ build active file",  // No change: Task label
            "command": "/usr/bin/g++",     // No change: Uses g++ compiler
            "args": [
                "-fdiagnostics-color=always",  // No change: Enables colored output
                "-g",                          // No change: Adds debug information
                "-std=c++11",                 // ADDED: Enables C++11 features
                "${file}",                    // No change: Input file
                "-o",                         // No change: Output flag
                "${fileDirname}/${fileBasenameNoExtension}"  // No change: Output path
            ],
            "options": {
                "cwd": "${fileDirname}"    // No change: Sets working directory
            },
            "problemMatcher": [
                "$gcc"                     // No change: Uses GCC problem matcher
            ],
            "group": {
                "kind": "build",           // No change: Specifies build task
                "isDefault": true          // No change: Sets as default build task
            },
            "detail": "Task generated by Debugger."  // No change: Task description
        }
    ],
    "version": "2.0.0"                    // No change: VSCode tasks version
}